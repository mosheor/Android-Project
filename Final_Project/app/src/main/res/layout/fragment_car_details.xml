<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ben.final_project.Fragments.CarDetailsFragment"
    android:layout_marginLeft="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <ImageView
            android:id="@+id/car_details_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/car"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <TextView
                android:id="@+id/car_details_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רכבים משפחתיים"
                android:textSize="17dp"
                />
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="קטגוריה:"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>

            <!-- TODO:change to spinner-->
        </LinearLayout>

        <TextView
            android:id="@+id/car_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תיאור הרכב:"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines ="50"
            android:maxLength ="2000"
            android:scrollHorizontally="true"
            android:textSize="20dp"
            android:textDirection="rtl"
            android:gravity="right"/>

        <com.example.ben.final_project.UnderlinedBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="נתוני רכב:"
            android:textSize="18dp"
            android:textDirection="rtl"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <TextView
                android:id="@+id/car_details_engine_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5 ליטר "
                android:textSize="17dp"
                />
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="נפח מנוע:"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>

            <!-- TODO:change to spinner-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/car_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="170000 ILS"
                android:textSize="17dp" />
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מחיר:"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/car_details_horse_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1700 כוחות סוס"
                android:textSize="17dp" />
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כוחות סוס:"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/car_details_zero_to_hundrend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.3 שניות "
                android:textSize="17dp" />
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":0-100"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/car_details_pollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1 מתוך 17"
                android:textSize="17dp" />'
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="זיהום אויר:"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/car_details_fuel_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 שנות אחריות "
                android:textSize="17dp" />
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="צריכת דלק:"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/car_details_warranty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="warranty"
                android:textSize="17dp" />
            <com.example.ben.final_project.UnderlinedBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="אחריות:"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <!-- TODO:add more????-->
        <!-- TODO:add tabs - auto and gear????-->
    </LinearLayout>

</ScrollView>
