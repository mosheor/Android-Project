<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ben.final_project.Fragments.CompanyDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/company_details_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם החברה"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/company_details_company_pic"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"/>

            <ProgressBar
                android:id="@+id/company_details_progressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>
        <TextView
            android:id="@+id/company_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מידע על החברה"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:inputType="textCapSentences|textMultiLine"
            android:textDirection="rtl"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/company_details_num_of_models"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מספר"
                android:textSize="18dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מספר הדגמים שקיימים בחברה:"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
